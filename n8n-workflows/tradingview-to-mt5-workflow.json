{
  "name": "TradingView to MT5 Bridge",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "webhook",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-receiver",
      "name": "Webhook Receiver",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [240, 300]
    },
    {
      "parameters": {
        "values": {
          "string": [
            {
              "name": "timestamp",
              "value": "={{ new Date().toISOString() }}"
            }
          ]
        },
        "options": {}
      },
      "id": "set-timestamp",
      "name": "Set Timestamp",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.2,
      "position": [460, 300]
    },
    {
      "parameters": {
        "jsCode": "// Parse TradingView webhook signal\nconst body = $node['Webhook Receiver'].json['body'];\n\nlet signalData;\nif (typeof body.message === 'string') {\n  try {\n    signalData = JSON.parse(body.message);\n  } catch (e) {\n    signalData = body;\n  }\n} else {\n  signalData = body;\n}\n\n// Extract and validate signal\nconst signal = (signalData.signal || signalData.action || 'BUY').toUpperCase();\nconst symbol = (signalData.symbol || 'EURUSD').toUpperCase();\n\n// Validate signal type\nif (!['BUY', 'SELL'].includes(signal)) {\n  return {\n    error: 'Invalid signal type. Must be BUY or SELL',\n    received: signal,\n    data: signalData\n  };\n}\n\nreturn {\n  signal: signal,\n  symbol: symbol,\n  lot_size: parseFloat(signalData.lot_size || 0.01),\n  sl_percent: parseFloat(signalData.sl_percent || 1.0),\n  tp_percent: parseFloat(signalData.tp_percent || 2.0),\n  timestamp: new Date().toISOString()\n};"
      },
      "id": "parse-signal",
      "name": "Parse Signal",
      "type": "n8n-nodes-base.code",
      "typeVersion": 3,
      "position": [680, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://mt5-bridge:5000/webhook/tradingview",
        "sendBody": true,
        "bodyContentType": "json",
        "specifyBody": "json",
        "jsonBody": "={{ {\n  \"signal\": $node[\"Parse Signal\"].json[\"signal\"],\n  \"symbol\": $node[\"Parse Signal\"].json[\"symbol\"],\n  \"lot_size\": $node[\"Parse Signal\"].json[\"lot_size\"],\n  \"sl_percent\": $node[\"Parse Signal\"].json[\"sl_percent\"],\n  \"tp_percent\": $node[\"Parse Signal\"].json[\"tp_percent\"],\n  \"timestamp\": $node[\"Parse Signal\"].json[\"timestamp\"]\n} }}",
        "options": {}
      },
      "id": "send-to-mt5",
      "name": "Send to MT5 Bridge",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [900, 300]
    },
    {
      "parameters": {
        "values": {
          "string": [
            {
              "name": "webhook_received",
              "value": "={{ new Date().toISOString() }}"
            },
            {
              "name": "signal_processed",
              "value": "={{ $node[\"Parse Signal\"].json[\"signal\"] || 'ERROR' }}"
            },
            {
              "name": "symbol",
              "value": "={{ $node[\"Parse Signal\"].json[\"symbol\"] || 'UNKNOWN' }}"
            },
            {
              "name": "mt5_response",
              "value": "={{ $node[\"Send to MT5 Bridge\"].json }}"
            }
          ]
        },
        "options": {}
      },
      "id": "log-execution",
      "name": "Log Execution",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.2,
      "position": [1120, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ $node[\"Log Execution\"].json }}",
        "options": {}
      },
      "id": "respond-to-webhook",
      "name": "Respond to Webhook",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1340, 300]
    },
    {
      "parameters": {
        "mode": "passThrough",
        "output": "={{ $node[\"Parse Signal\"].json[\"error\"] ? false : true }}",
        "options": {}
      },
      "id": "check-for-errors",
      "name": "Check for Errors",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 3,
      "position": [680, 500]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { \"success\": false, \"error\": $node[\"Parse Signal\"].json[\"error\"], \"timestamp\": new Date().toISOString() } }}",
        "responseCode": 400,
        "options": {}
      },
      "id": "error-response",
      "name": "Error Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [900, 500]
    }
  ],
  "connections": {
    "webhook-receiver": {
      "main": [
        [
          {
            "node": "set-timestamp",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "set-timestamp": {
      "main": [
        [
          {
            "node": "parse-signal",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "parse-signal": {
      "main": [
        [
          {
            "node": "check-for-errors",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "check-for-errors": {
      "main": [
        [
          {
            "node": "send-to-mt5",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "error-response",
            "type": "main",
            "index": 1
          }
        ]
      ]
    },
    "send-to-mt5": {
      "main": [
        [
          {
            "node": "log-execution",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "log-execution": {
      "main": [
        [
          {
            "node": "respond-to-webhook",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "staticData": null
}
